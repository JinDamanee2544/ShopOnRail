<div class='mt-5 bg-white shadow rounded p-4'>
  <h1 class='h2 bg font-weight-bold text-center mb-4'>
    <%= @ownerName %>'s Shop
  </h1>
  <% if (@shopItems.empty?)%>
    <h1>No Item</h1>
  <%else%>
    <table class='table'>
      <thead class='bg-secondary text-white'>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Picture</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Stock</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @shopItems.each do |item| %>
          <tr class="">
            <th scope="row">
              <%= item.id %>
            </th>
            <td class='w-auto'>
              <% if(item.picture.attached?)%>
                <%= image_tag item.picture.variant(:thumb) %>
              <% else %>
                <p>No Picture</p>
              <% end %>
            </td>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= item.stock %>
            </td>
            <% if(session[:logged_in]) %>
              <td class='d-flex'>
                <%= button_to 'Buy', shop_buy_path(item.id), method: :post , class:'btn btn-success'%>
              </td>
            <% end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%end%>
</div>
