<div>
  <h1 class='h4 bg'>Cart Items</h1>
  <% if (@allItem.empty?)%>
    <h1>No Item</h1>
  <%else%>
    <table class='table bg'>
      <thead class=''>
        <tr class="">
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @allItem.each do |item| %>
          <tr class="">
            <th scope="row"><%= item.id %></th>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <% if(session[:logged_in]) %>
              <td><button class='btn btn-primary'>Buy</button></td>
            <% end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%end%>
</div>
